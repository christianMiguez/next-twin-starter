{
  "name": "next-twin-starter",
  "version": "0.0.1",
  "description": "Starter pack for Next.js with Tailwind CSS, twin.macro and styled-components (and more)",
  "author": {
    "name": "Christian Klein",
    "email": "mail@christianklein.dev",
    "url": "https://christianklein.dev"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "postinstall": "husky install"
  },
  "dependencies": {
    "next": "10.0.7",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "babel-plugin-macros": "^3.0.1",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.1",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.6",
    "react-is": "^17.0.1",
    "tailwindcss": "^2.0.3",
    "twin.macro": "^2.2.3",
    "typescript": "^4.2.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint src/ --ext .js,.jsx,.ts,.tsx --fix"
    ]
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components"
    }
  }
}
